<%= form_for customer do |f| %>
  
  <% if customer.errors.any? %>
    <%= render 'shared/errors', errors: customer.errors %>
  <% end %>
  
  <div class='row my-2'>
    <div class='col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3'>
      <div class='row'>
        <div class='col-md-6'>
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <div class='col-md-6'>
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
      </div>
    </div>
  </div>

  <div class="row my-2">
    <div class='col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3'>
      <div class='row'>
        <div class='col-md-12'>
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>
    </div>    
  </div>

  <div class="row my-2">
    <div class='col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3'>
      <div class='row'>
        <div class='col-md-12'>
          <%= f.label :address1 %>
          <%= f.text_field :address1, class: 'form-control' %>
        </div>
      </div>
    </div>    
  </div>
  
  <div class="row my-2">
    <div class='col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3'>
      <div class='row'>
        <div class='col-md-12'>
          <%= f.label :address2 %>
          <%= f.text_field :address2, class: 'form-control' %>
        </div>
      </div>
    </div>    
  </div>

  <div class="row my-2">
    <div class='col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3'>
      <div class='row'>
        <div class='col-md-4'>
          <%= f.label :city %>
          <%= f.text_field :city, class: 'form-control' %>
        </div>
        <div class='col-md-4'>
          <%= f.label :state %>
          <%= f.text_field :state, class: 'form-control' %>
        </div>
        <div class='col-md-4'>
          <%= f.label :zip %>
          <%= f.text_field :zip, class: 'form-control' %>
        </div>
      </div>
    </div>
  </div>

  <div class='row my-2'>
    <div class='col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3'>
      <div class='row'>
        <div class='col-md-6'>
          <%= f.label :day_number %>
          <%= f.text_field :day_number, class: 'form-control' %>
        </div>
        <div class='col-md-6'>
          <%= f.label :night_number %>
          <%= f.text_field :night_number, class: 'form-control' %>
        </div>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3'>
      <div class='row'>
        <div class='col-md-6 col-lg-5 offset-lg-1'>
          <%= f.submit(customer.new_record? ? "Create Customer" : "Update Customer", class: 'btn btn-success btn-block my-2') %>
        </div>
        <div class='col-md-6 col-lg-5'>
          <%= link_to "Cancel", customers_path, class: 'btn btn-danger btn-block my-2' %>
        </div>        
      </div>
    </div>
  </div>
<% end %>
